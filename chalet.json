{
	"workspace": "modules-project",
	"version": "1.0.0",
	"abstracts:*": {
		"language": "C++",
		"settings:Cxx": {
			"cppStandard": "c++20",
			"warnings": "pedantic",
			"includeDirs": [
				"include"
			]
		}
	},
	"targets": {
		"library": {
			"kind": "staticLibrary",
			"location": "src/library"
		},
		"modules-project": {
			"kind": "executable",
			"location": "src/modules",
			"settings:Cxx": {
				"cppModules": true,
				"links": [
					"library"
				]
			}
		}
	},
	"distribution": {
		"modules-project": {
			"kind": "bundle",
			"buildTargets": [
				"modules-project"
			]
		}
	}
}
