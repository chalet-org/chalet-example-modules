{
	"workspace": "modules-project",
	"version": "1.0.0",
	"defaultConfigurations": [
		"Release",
		"Debug",
		"MinSizeRel",
		"RelWithDebInfo",
		"RelStable",
		"Profile"
	],
	"abstracts:*": {
		"language": "C++",
		"settings:Cxx": {
			"cppStandard": "c++20",
			"warnings": "pedantic",
			"includeDirs": [
				"include"
			]
		}
	},
	"targets": {
		"library": {
			"kind": "staticLibrary",
			"files": "src/library/**.cpp"
		},
		"modules-project": {
			"kind": "executable",
			"settings:Cxx": {
				"cppModules": true,
				"staticLinks": [
					"library"
				]
			},
			"files": "src/modules/**.{ccm,ixx}"
		}
	},
	"distribution": {
		"modules-project": {
			"kind": "bundle",
			"buildTargets": [
				"modules-project"
			]
		}
	}
}
